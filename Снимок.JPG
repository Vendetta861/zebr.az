<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Logistics Company</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
    header, nav, section, footer { padding: 20px; }
    header { background-color: #333; color: white; display: flex; justify-content: space-between; align-items: center; }
    nav a { color: white; margin: 0 15px; text-decoration: none; }
    nav a:hover { text-decoration: underline; }
    .language-switch { cursor: pointer; color: #FFD700; }
    section { padding: 40px 20px; }
    footer { background-color: #333; color: white; text-align: center; padding: 10px 20px; }
  </style>
</head>
<body>

<header>
  <div id="logo">Logistics Co.</div>
  <nav>
    <a href="#home" data-key="home">Home</a>
    <a href="#services" data-key="services">Services</a>
    <a href="#about" data-key="about">About Us</a>
    <a href="#contact" data-key="contact">Contact</a>
    <span class="language-switch" onclick="switchLanguage('az')">AZ</span> |
    <span class="language-switch" onclick="switchLanguage('en')">EN</span>
  </nav>
</header>

<section id="home">
  <h1 data-key="welcome">Welcome to Our Logistics Services</h1>
  <p data-key="intro">We provide reliable and efficient logistics solutions tailored to your needs.</p>
</section>

<section id="services">
  <h2 data-key="services">Our Services</h2>
  <ul>
    <li data-key="packing">Custom Packing & Crating</li>
    <li data-key="shipping">Domestic & International Shipping</li>
    <li data-key="storage">Secure Warehousing Solutions</li>
  </ul>
</section>

<section id="about">
  <h2 data-key="about">About Us</h2>
  <p data-key="aboutText">With years of experience, we are leaders in providing comprehensive logistics services worldwide.</p>
</section>

<section id="contact">
  <h2 data-key="contact">Contact Us</h2>
  <p data-key="contactText">Email us at: contact@logisticsco.com</p>
</section>

<footer>
  <p>&copy; 2024 Logistics Co.</p>
</footer>

<script>
  const translations = {
    az: {
      home: "Ana Səhifə",
      services: "Xidmətlər",
      about: "Haqqımızda",
      contact: "Əlaqə",
      welcome: "Logistika Xidmətlərimizə Xoş Gəlmisiniz",
      intro: "Sizə uyğun etibarlı və səmərəli logistika həlləri təqdim edirik.",
      packing: "Fərdi Qablaşdırma və Sandıq Xidmətləri",
      shipping: "Daxili və Beynəlxalq Göndərişlər",
      storage: "Təhlükəsiz Anbar Həlləri",
      aboutText: "İllərin təcrübəsi ilə, dünya üzrə geniş logistika xidmətləri təqdim edən liderik.",
      contactText: "Bizə e-poçtla müraciət edin: contact@logisticsco.com"
    },
    en: {
      home: "Home",
      services: "Services",
      about: "About Us",
      contact: "Contact",
      welcome: "Welcome to Our Logistics Services",
      intro: "We provide reliable and efficient logistics solutions tailored to your needs.",
      packing: "Custom Packing & Crating",
      shipping: "Domestic & International Shipping",
      storage: "Secure Warehousing Solutions",
      aboutText: "With years of experience, we are leaders in providing comprehensive logistics services worldwide.",
      contactText: "Email us at: contact@logisticsco.com"
    }
  };

  function switchLanguage(lang) {
    document.querySelectorAll('[data-key]').forEach(el => {
      const key = el.getAttribute('data-key');
      el.textContent = translations[lang][key];
    });
  }
</script>

</body>
</html>